<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangdong.dao.inte.EmailMybatisDao">
    <select id="listEmail" resultType="Email">
      SELECT userName,email
      FROM user_email
    </select>

    <select id="selectOneEmail" resultType="Email" parameterType="string">
      SELECT userName,email
      FROM user_email
      WHERE email=#{email}
    </select>
    <insert id="insertOneEmail" parameterType="Email">
      INSERT INTO user_email(userName,email)
      VALUES (#{userName},#{email})
    </insert>

    <update id="updateEmail" parameterType="Email">
    UPDATE user_email m
    SET userName=#{userName},email=#{email}
    WHERE m.email=#{email}
    </update>

</mapper>