<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

     <settings>
         <!--使用GeneratedKeys获取数据库自增主键值-->
         <setting name="useGeneratedKeys" value="true"/>
         <!--使用类别名替代类名-->
         <setting name="useColumnLabel" value="true"/>
         <setting name="lazyLoadingEnabled" value="false"/>
         <!--开启驼峰命名转换-->
         <setting name="mapUnderscoreToCamelCase" value="true"/>
     </settings>




    <typeAliases>
        <typeAlias alias="User" type="com.huangdong.bean.User"/>
        <typeAlias alias="Post" type="com.huangdong.bean.Post"/>
        <typeAlias alias="Board" type="com.huangdong.bean.Board"/>
        <typeAlias alias="Topic" type="com.huangdong.bean.Topic"/>
        <typeAlias alias="LoginLog" type="com.huangdong.bean.LoginLog"/>
        <typeAlias alias="Email" type="com.huangdong.bean.Email" />
        <typeAlias alias="Message" type="com.huangdong.bean.Message" />
        <typeAlias alias="CommunityMessage" type="com.huangdong.bean.CommunityMessage"/>
    </typeAliases>


</configuration>